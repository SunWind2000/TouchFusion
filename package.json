    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "markdown-it": "^14.1.0",
    "shiki": "^1.2.4",
    "standard-version": "^9.5.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
