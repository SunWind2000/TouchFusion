  "version": "0.0.2",
  "type": "module",
  "main": "lib/touch-fusion.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "package.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "workspaces": [
